{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@devkit/mock/libB": ["libs/mock/libB/src/index.ts"],
      "@devkit/discovery": ["apps/app/src/discovery.ts"],
      "@devkit/components": ["libs/components/src/index.ts"],
      "@devkit/builders": ["libs/builders/src/index.ts"],
      "@devkit/mock/ui-kit": ["libs/mock/ui-kit/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
